@using VFT.CMS.Admin.ViewModels.Products
@model IEnumerable<ProductViewModel>

@{
	ViewData["Title"] = "Sản phẩm";
}

@section scripts {
	<!-- Index.js -->
	<script src="~/view-resources/Views/Product/Index.js" asp-append-version="true"></script>

}

<div class="content-wrapper">
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@ViewData["Title"]</h1>
				</div>
				<div class="col-sm-6">
					<div class="float-sm-right">
						<button class="btn btn-success btn-sm" data-toggle="modal" data-target="#ProductCreateModal">
							<i class="fa fa-plus-square"></i>
							Thêm mới
						</button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="card">
			<div class="card-body p-0">
				<table id="tableProduct" class="table projects">
					<thead>
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.CategoryId)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Image)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Price)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Description)
							</th>
							<th class="text-center" style="width: 20%">Actions</th>
						</tr>
					</thead>
					<tbody id="tblProductBody"></tbody>
				</table>
			</div>
		</div>
	</section>
</div>



@await Html.PartialAsync("~/Views/Product/_CreateModal.cshtml", Model)

<div class="modal fade" id="ProductViewModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="ProductViewModalLabel">
	<div class="modal-dialog modal-xl" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>

<div class="modal fade" id="ProductEditModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="ProductEditModalLabel">
	<div class="modal-dialog modal-xl" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>