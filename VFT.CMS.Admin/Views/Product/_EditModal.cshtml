@using VFT.CMS.Admin.ViewModels.Products
@model EditProductViewModel

<div class="modal-header btn-warning align-items-center">
	<i class="fas fa-pencil-alt"></i>
	<h5 class="modal-title ml-2"></h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<form method="post">
		<input type="hidden" asp-for="Id" />
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="Name" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.Name)
					</label>
					<div class="col-sm-8">
						<input asp-for="Name" class="form-control" type="text" onkeyup="OnKeyUpProductEdit()" required placeholder="Nhập tên sản phẩm.." autocomplete="off" />
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="CategoryId" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.CategoryId)
					</label>
					<div class="col-sm-8">
						<select asp-for="CategoryId" asp-items="ViewBag.Categories" required class="form-control">
							<option>--Chọn danh mục--</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="Price" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.Price)
					</label>
					<div class="col-sm-8">
						<input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá sản phẩm...">
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="Quantity" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.Quantity)
					</label>
					<div class="col-sm-8">
						<input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng sản phẩm...">
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="Image" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.Image)
					</label>
					<div class="col-sm-8">
						<input asp-for="Image" type="file" class="form-control">
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-12">
				<div class="form-group row mb-0 required">
					<label asp-for="Description" class="col-md col-form-label control-label text-right custom-label">
						@Html.DisplayNameFor(model => model.Description)
					</label>
					<div class="col-sm-10">
						<textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm..."></textarea>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button class="btn btn-danger btn-sm btn-default" data-dismiss="modal">Hủy</button>
	<button class="btn btn-success btn-sm" onclick="UpdateProduct()">Lưu</button>
</div>


<script src="~/view-resources/Views/Product/_Editmodal.js" asp-append-version="true"></script>