@using VFT.CMS.Admin.ViewModels.Roles
@model RoleViewModel

<!-- Modal -->
<div class="modal-header btn-warning align-items-center">
	<i class="fas fa-pencil-alt"></i>
	<h5 class="modal-title ml-2">
	</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="HideRoleEditModal()">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<form method="post" onsubmit="return EnterNoLoad()">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label asp-for="Name">
				@Html.DisplayNameFor(model => model.Name)
			</label>
			<input type="text" asp-for="Name" class="form-control" onkeyup="OnKeyUpRoleEdit()" required placeholder="Nhập tên quyền..." autocomplete="off" />
		</div>
	</form>
</div>
<div class="modal-footer">
	<button class="btn btn-danger btn-sm btn-default" data-dismiss="modal" onclick="HideRoleEditModal()">Hủy</button>
	<button class="btn btn-success btn-sm" onclick="UpdateRole()">Lưu</button>
</div>


<script src="~/view-resources/Views/Role/_EditModal.js" asp-append-version="true"></script>