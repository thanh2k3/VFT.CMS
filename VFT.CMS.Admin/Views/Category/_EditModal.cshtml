@using VFT.CMS.Admin.ViewModels.Categories
@model CategoryViewModel

<!-- Modal -->
<div class="modal-header btn-warning align-items-center">
	<i class="fas fa-pencil-alt"></i>
	<h5 class="modal-title ml-2"></h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<form method="post" onsubmit="return EnterNoLoad()">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label asp-for="Name">
				@Html.DisplayNameFor(model => model.Name)
			</label>
			<input type="text" asp-for="Name" class="form-control" onkeyup="OnKeyUpCategoryEdit()" required placeholder="Nhập tên danh mục..." autocomplete="off" />
			<i class="fa-solid fa-circle-exclamation" id="errorIcon"></i>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button class="btn btn-danger btn-sm btn-default" data-dismiss="modal">Hủy</button>
	<button class="btn btn-success btn-sm" onclick="UpdateCategory()">Lưu</button>
</div>


<script src="~/view-resources/Views/Category/_EditModal.js" asp-append-version="true"></script>