@using VFT.CMS.Admin.ViewModels.Categories
@model IEnumerable<CategoryViewModel>

@{
	ViewData["Title"] = "Danh mục";
}

@section scripts {
	<!-- Index.js -->
	<script src="~/view-resources/Views/Category/Index.js" asp-append-version="true"></script>
}

<div class="content-wrapper">
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@ViewData["Title"]</h1>
				</div>
				<div class="col-sm-6">
					<div class="float-sm-right">
						<button class="btn btn-success btn-sm" data-toggle="modal" data-target="#CategoryCreateModal">
							<i class="fa fa-plus-square"></i>
							Thêm mới
						</button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="card">
			<div class="card-body p-0">
				<table class="table projects">
					<thead>
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th class="text-center" style="width: 20%">Tác vụ</th>
						</tr>
					</thead>
					<tbody id="tblCategoryBody"></tbody>
				</table>
			</div>
		</div>
	</section>
</div>



@await Html.PartialAsync("~/Views/Category/_CreateModal.cshtml", Model)

<div class="modal fade" id="CategoryEditModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="CategoryEditModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>