@using VFT.CMS.Admin.ViewModels.Categories
@model CategoryViewModel

<!-- Modal -->
<div class="modal fade" id="CategoryCreateModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="CategoryCreateModalLabel" onkeydown="CloseCategoryCreateModal(event)">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header btn-success align-items-center">
				<i class="fa fa-plus-square"></i>
				<h5 class="modal-title ml-2" id="Title">
				</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="HideCreateModal()">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="post" onsubmit="return EnterNoLoad();">
					<input type="hidden" asp-for="Id" value="0" />
					<div class="form-group">
						<label asp-for="Name">
							@Html.DisplayNameFor(model => model.Name)
						</label>
						<input asp-for="Name" class="form-control" onkeyup="OnKeyUpCreate()" type="text" required placeholder="Nhập tên danh mục..." autocomplete="off" />
						<i class="fa-solid fa-circle-exclamation" id="errorIcon"></i>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger btn-sm btn-default" data-dismiss="modal" onclick="HideCreateModal()">Hủy</button>
				<button class="btn btn-success btn-sm" onclick="CreateCategory();">Tạo</button>
			</div>
		</div>
	</div>
</div>


<script src="~/view-resources/Views/Category/_CreateModal.js" asp-append-version="true"></script>