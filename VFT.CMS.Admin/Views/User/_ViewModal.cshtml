@using VFT.CMS.Admin.ViewModels.Users
@model UserViewModel

<div class="modal-header btn-info align-items-center">
	<i class="fa-solid fa-eye"></i>
	<h5 class="modal-title ml-2">Xem [@Model.FullName]</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<div class="row mb-3">
		<div class="col-md-4">
			<img src="@Model.Avatar" class="img-responsive img-thumbnail" style="width: 100%" />
		</div>
		<div class="col-md-8">
			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group row mb-0 required">
						<label asp-for="Email" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
							@Html.DisplayNameFor(model => model.Email)
						</label>
						<div class="col-sm-8">
							<input asp-for="Email" disabled class="form-control" type="text" />
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group row mb-0 required">
						<label asp-for="FullName" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
							@Html.DisplayNameFor(model => model.FullName)
						</label>
						<div class="col-sm-8">
							<input asp-for="FullName" disabled type="text" class="form-control">
						</div>
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group row mb-0 required">
						<label asp-for="Birthday" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
							@Html.DisplayNameFor(model => model.Birthday)
						</label>
						<div class="col-sm-8">
							<input asp-for="Birthday" disabled type="date" class="form-control">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal-footer">
	<button class="btn btn-default btn-sm" data-dismiss="modal">Trờ về</button>
</div>