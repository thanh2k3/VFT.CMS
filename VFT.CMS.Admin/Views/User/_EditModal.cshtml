@using VFT.CMS.Admin.ViewModels.Users
@model EditUserViewModel


<div class="modal-header bg-warning align-items-center">
	<i class="fas fa-pencil-alt"></i>
	<h5 class="modal-title ml-2"></h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<form id="formEditUser" class="needs-validation" novalidate method="post">
		<input asp-for="Id" hidden />
		<div class="row mb-3">
			<div class="col-md-12">
				<button class="btn btn-sm bg-warning float-sm-right" data-toggle="modal" data-target="#UserCreateModal">
					<i class="fas fa-pencil-alt"></i>
					Đổi mật khẩu
				</button>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-4">
				<img src="@Model.Avatar" class="img-responsive img-thumbnail" id="targetImage" style="width: 100%" />
			</div>
			<div class="col-md-8">
				<div class="row mb-3">
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="Email" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
								@Html.DisplayNameFor(model => model.Email)
								<span class="text-danger">*</span>
							</label>
							<div class="col-sm-8">
								<input asp-for="Email" type="text" class="form-control" required placeholder="Nhập Email..." autocomplete="off" />
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="FullName" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
								@Html.DisplayNameFor(model => model.FullName)
							</label>
							<div class="col-sm-8">
								<input asp-for="FullName" type="text" class="form-control" placeholder="Nhập họ và tên..." autocomplete="off" />
							</div>
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="Birthday" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
								@Html.DisplayNameFor(model => model.Birthday)
							</label>
							<div class="col-sm-8">
								<input asp-for="Birthday" class="form-control" type="date" />
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="Avatar" class="col-md col-form-label font-weight-normal control-label text-right custom-label">
								@Html.DisplayNameFor(model => model.Avatar)
							</label>
							<div class="col-sm-8">
								<input asp-for="Avatar" id="Image" name="Image" class="form-control" type="file" onchange="LoadUserEditImage(this)" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button class="btn btn-danger btn-sm btn-default" data-dismiss="modal">Hủy</button>
	<button class="btn btn-success btn-sm" onclick="UpdateUser()">Lưu</button>
</div>

<script src="~/view-resources/Views/User/_Editmodal.js" asp-append-version="true"></script>