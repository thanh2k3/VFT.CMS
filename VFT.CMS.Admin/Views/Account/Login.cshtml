@model VFT.CMS.Admin.ViewModels.Account.LoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>VFT.CMS</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/account/login"><b>Đăng nhập</b></a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="form-group mb-3">
                        <label asp-for="UserName">Tên đăng nhập</label>
                        <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password">Mật khẩu</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Mật khẩu">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    @if(TempData["msg"] != null)
                    {
                        <div class="mb-4">
                            <span class="text-danger">@TempData["msg"]</span>
                        </div>
                    }

                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn-primary btn-block" onclick="Login()">Gửi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    

    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>

    <!-- login.js -->
    @*<script src="~/view-resources/views/account/login.js" asp-append-version="true"></script>*@

    <!-- Sweet Alert -->
    <link href="~/lib/sweetalert/dist/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/sweetalert/dist/js/sweetalert2.min.js"></script>
</body>
</html>