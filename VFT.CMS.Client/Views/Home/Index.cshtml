@using VFT.CMS.Client.ViewModels.Products;
@model IEnumerable<VFT.CMS.Client.ViewModels.Products.ProductViewModel>

@{
	ViewData["Title"] = "Home Page";
	Layout = "_Layout";

	PagedViewModel pageVM = ViewBag.PagedViewModel;
}

<style>
	.card-img-top {
		width: 100%;
		height: 290px;
		object-fit: contain;
	}
</style>


<div class="row">
	<div class="col-xl-3 col-lg-4 col-md-5">
		<div class="card">
			<div class="card-header">
				Danh mục
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">T-Shirt</li>
				<li class="list-group-item">Hoodie</li>
				<li class="list-group-item">Sweater</li>
			</ul>
		</div>
	</div>

	<div class="col-xl-9 col-lg-8 col-md-7">

		<partial name="_ToolbarPartial" model="@pageVM" />

		<div class="row row-cols-1 row-cols-md-4 g-3">
			@if (Model != null && Model.Any())
			{
				@foreach (var product in Model)
				{
					<div class="col">
						<div class="card h-100">
							<img src="~/@product.Image" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">@product.Name</h5>
								<p class="card-text">@product.Description</p>
								<p class="card-text">@product.Price vnđ</p>
							</div>
						</div>
					</div>
				}
			}
		</div>

		<partial name="_PaginationPartial" model="@pageVM" />
	</div>
</div>